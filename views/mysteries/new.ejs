<% layout('./layouts/boilerplate') %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
</script>

<div class="row">
    <h1 class="text-center">New Mystery</h1>
    <div class="col-md-8 offset-md-2">
        <form action="/mysteries" class="validated-form" method="POST" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="mystery[title]" maxlength="70" required>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="mystery[description]" maxlength="5000" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="image" class="form-label">Upload front image (Max size: 2MB)</label>
                    <input class="form-control" type="file" id="image" name="image">
                    <div class="invalid-feedback">
                        Please provide a valid image.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location (Latitude, Longitude)</label>
                <div style="display: flex; width: 100%;">
                    <input style="width:90%;" class="form-control" placeholder="Latitude, Longitude" type="text" id="location" name="mystery[geometry]" pattern="^[-+]?([1-8]?\d(\.\d+)?|90(\.0+)?),\s*[-+]?(180(\.0+)?|((1[0-7]\d)|([1-9]?\d))(\.\d+)?)$" required>
                    <button class="btn btn-sm btn-primary" style="width:10%;" id="getLocation"><i style="font-size: 1.5em;" class="fa fa-map-marker" aria-hidden="true"></i></button>
                </div>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>
            <div id="map"></div>
            <div class="mt-3 mb-3">
                <button type="submit" class="btn btn-success">Add Mystery</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/pageMapSelect.js"></script>
<script src="/js/sizeLimit.js"></script>


