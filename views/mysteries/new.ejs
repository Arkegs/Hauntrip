<% layout('./layouts/boilerplate') %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
</script>

<div class="row">
    <h1 class="text-center">New Mystery</h1>
    <div class="col-md-8 offset-md-2">
        <form action="/mysteries" class="validated-form" method="POST" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="mystery[title]" required>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="mystery[description]" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="image" class="form-label">Upload front image</label>
                    <input class="form-control" type="file" id="image" name="image">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" placeholder="Longitude, Latitude" type="text" id="location" name="mystery[geometry]" required>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>
            <div id="map"></div>
            <div class="mt-3 mb-3">
                <button class="btn btn-success">Add Mystery</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/pageMapSelect.js">

</script>

