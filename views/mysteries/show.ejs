<% layout('./layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">
<link rel="stylesheet" href="/stylesheets/mystery.css">
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const mystery = <%-JSON.stringify(mystery)%>;
</script>

<div class="mystery-block">
    <div class="mystery-summary">
        <div class="mystery-summary-data">
            <h3>Summary</h3>
            <hr>
            <div class="summary-item">
                <h5> Spookiness: </h5>
                <span>
                    <% for(let a=1; a<=5; a++){ %>
                        <span class="<%= (a <= mystery.spookiness) ? 'star-rated' : 'star-unrated' %>" >&#128123;</span>
                    <% } %>
                </span>
            </div>
            <div class="summary-item">
                <h5>Credibility:</h5> 
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= mystery.credibility + '%' %>" aria-valuenow="<%= mystery.credibility %>" aria-valuemin="0" aria-valuemax="100"><%= mystery.credibility %></div>
                </div>
            </div>
            <div class="summary-item">
                <h5>Location: </h5>
                <p><%= mystery.location %></p>
                <div id="map"></div>
            </div>
            <div class="summary-item">
                <h5>Created at:</h5>
                <%= mystery.createdAt.getDate() + '/' + mystery.createdAt.getMonth() + '/' + mystery.createdAt.getFullYear() %>
            </div>
        </div>
    </div>
    <div class="mystery-info">
        <div class="mystery-info-data">
            <h2><%= mystery.title %></h2>
            <p class="author-name">By <a href="/user/<%= mystery.author.username %>"><%= mystery.author.username %></a></p>
            <div class="img-container">
                <img src="<%= mystery.image.url ? mystery.image.url : 'https://res.cloudinary.com/arkeg/image/upload/v1638555012/Hauntrip/General/unavailable-2_plmphn.png' %>" alt="...">
            </div>
            <h4>Description</h4>
            <p><%= mystery.description %></p>
            <% if(currentUser && mystery.author._id.equals(currentUser._id)){ %>
                <div class="mystery-author-panel">
                    <a class="btn btn-success" href="/mysteries/<%= mystery._id %>/edit">Edit Mystery</a>
                    <form action="/mysteries/<%= mystery._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Mystery</button>
                    </form>
                </div>
            <% } %>
        </div>
        <hr>
        <div class="evidence-block">
            <% if(currentUser){ %>
            <div class="user-block">
                <div class="spookiness-block">
                    <h4>Was it scary? Rate it!</h4>
                    <div class="mb-3">
                        <form action="/mysteries/<%= mystery._id %>/rating" class="star-form" method="POST">
                            <% for(let a=5; a>0; a--){ %>
                            <button type="submit" name="spookiness" value="<%= a %>" class="<% if(a <= userSpookinessValue){%>voted<%}%>" >&#128123;</button>
                            <% } %>
                        </form>
                    </div>  
                </div>    
                <div class="post-evidence">
                    <h4>Leave some evidence!</h4>
                    <form class="mb-3 validated-form" action="/mysteries/<%= mystery._id %>/evidences" enctype="multipart/form-data" method="POST" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="conclusion">Mystery credibility</label>
                            <div>
                                <input type="radio" id="conclusion1"
                                 name="evidence[conclusion]" value="real">
                                <label for="contactChoice1">Real</label>
                            
                                <input type="radio" id="conclusion2"
                                 name="evidence[conclusion]" value="fake">
                                <label for="contactChoice1">Fake</label>
                        </div>  
                        <div class="mb-3">
                            <label class="form-label" for="title">Evidence title</label>
                            <input class="form-control" type="text" name="evidence[title]" id="title" required/>
                        </div>  
                        <div class="mb-3">
                            <label class="form-label" for="body">Evidence description</label>
                            <textarea class="form-control" name="evidence[body]" id="body" cols="30" rows="4" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="images">Images</label>
                            <input type="file" name="images" id="images" multiple />
                        </div>
                        <button>Submit</button>
                    </form>
                </div>
            </div>    
            <% } %>
            <div id="evidences-container">
                <h3>Evidences</h3>
                <% for (let evidence of mystery.evidences){ %>
                    <div class="single-evidence <% if(evidence.helpfulness >= 5){ %> helpful <% } %>">        
                            <h4><%= evidence.title %></h4>
                            <h6 class="author-name">By <a href="/user/<%= evidence.author.username %>"><%= evidence.author.username %></a></h6>
                            <p>Conclusion: <%= evidence.conclusion %></p>
                            <p>Evidence: <%= evidence.body %></p>
                            <% for (let evidenceImg of evidence.images){ %>
                                <img class="img-thumbnail evidence-thumbnail" src="<%= evidenceImg.url %>">
                            <% } %>
                            <div class="evidence-panel">
                                <div class="evidence-upvote">
                                    <form action="/mysteries/<%= mystery._id %>/evidences/<%= evidence._id %>"  method="POST">
                                        <button type="submit" name="helpfulness" value="1" class="upvote-arrow"></button>
                                    </form>
                                    <span class="vote-counter"><%= evidence.helpfulness %></span>
                                    <form action="/mysteries/<%= mystery._id %>/evidences/<%= evidence._id %>" method="POST">
                                        <button type="submit" name="helpfulness" value="-1" class="downvote-arrow"></button>
                                    </form>
                                </div>
                                <% if(currentUser && evidence.author.equals(currentUser._id)){ %>
                                    <form action="/mysteries/<%= mystery._id %>/evidences/<%= evidence._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                            <% if(evidence.helpfulness >= 5){ %> 
                                <p class="helpfulMsg">This evidence is considered Helpful!</p> 
                            <% } %>
                    </div>
                <% } %>
            </div>
            <button id="loadEvidences" class="btn btn-lg btn-primary loadButton">Load more</button>
        </div>
    </div>
</div>



