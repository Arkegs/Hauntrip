<% layout('./layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
    <h1>All our fucking mysteries!</h1>
    <a href="/mysteries/new">Nuevo misterio culiao</a>
    <ul>
        <% for (let mystery of mysteries){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class=col-md-4>
                        <img class="img-fluid" src="<%= mystery.image.url ? mystery.image.url : 'https://res.cloudinary.com/arkeg/image/upload/v1636751000/Hauntrip/unavailable_g5kbfo.png' %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= mystery.title %></h5>
                            <p class="card-text"><%= mystery.description %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= mystery.location %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/mysteries/<%= mystery._id %>"> See mystery </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </ul>
<</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const mysteries = {features: <%- JSON.stringify(mysteries) %>}
</script>
<script src="/js/clusterMap.js"></script>