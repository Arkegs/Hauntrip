<% layout('./layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/evidence.css">

<div class="user-panel">
    <img src="https://image.flaticon.com/icons/png/512/98/98415.png">
    <div class="panel">  
        <h1>New Evidence</h1>
        <form class="mb-3 validated-form" action="/mysteries/<%= mystery %>/evidences" enctype="multipart/form-data" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label form-custom-title" for="conclusion">Mystery credibility</label>
                <div>
                    <label><input type="radio" class="conclusion1" id="conclusion1" name="evidence[conclusion]" value="real" required checked="checked"><svg viewBox="0 0 24 24"><path d="M23,10C23,8.89 22.1,8 21,8H14.68L15.64,3.43C15.66,3.33 15.67,3.22 15.67,3.11C15.67,2.7 15.5,2.32 15.23,2.05L14.17,1L7.59,7.58C7.22,7.95 7,8.45 7,9V19A2,2 0 0,0 9,21H18C18.83,21 19.54,20.5 19.84,19.78L22.86,12.73C22.95,12.5 23,12.26 23,12V10M1,21H5V9H1V21Z" /></svg>Real</label>
                    <label><input type="radio" class="conclusion2" id="conclusion2" name="evidence[conclusion]" value="fake"><svg viewBox="0 0 24 24"><path d="M19,15H23V3H19M15,3H6C5.17,3 4.46,3.5 4.16,4.22L1.14,11.27C1.05,11.5 1,11.74 1,12V14A2,2 0 0,0 3,16H9.31L8.36,20.57C8.34,20.67 8.33,20.77 8.33,20.88C8.33,21.3 8.5,21.67 8.77,21.94L9.83,23L16.41,16.41C16.78,16.05 17,15.55 17,15V5C17,3.89 16.1,3 15,3Z" /></svg>Fake</label>
                </div>
            </div>  
            <div class="mb-3">
                <label class="form-label form-custom-title" for="title">Evidence title</label>
                <input class="form-control" type="text" name="evidence[title]" id="title" maxlength="70" required/>
            </div>  
            <div class="mb-3">
                <label class="form-label form-custom-title" for="body">Evidence description</label>
                <textarea class="form-control" name="evidence[body]" id="body" cols="30" rows="4" maxlength="2500" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label form-custom-title" for="images">Images (3 images max, 1MB each)</label>
                <input type="file" name="images" id="images" multiple />
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

</script>
<script src="/js/multiSizeLimit.js"></script>
<script>document.title = 'New Evidence | Hauntrip' </script>
